[Unit]
Description=TSB Technical Bulletins API Service
After=network.target

[Service]
User=debian
Group=debian
WorkingDirectory=/home/debian/Git/MotCheck-UK/backend/tsb_api
ExecStart=/home/debian/.pyenv/shims/python app.py
# Restart on failure but with a 5-second delay in between
Restart=on-failure
RestartSec=5
# Output to syslog
StandardOutput=syslog
StandardError=syslog
SyslogIdentifier=tsb-api

[Install]
WantedBy=multi-user.target